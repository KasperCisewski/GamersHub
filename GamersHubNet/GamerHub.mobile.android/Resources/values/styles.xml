<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>  
  </style>

  <style name="TextInputLayoutStyle" parent="Widget.Design.TextInputLayout">
    <item name="android:layout_marginHorizontal">85dp</item>
    <item name="android:layout_marginVertical">12dp</item>
    <item name="android:textAlignment">center</item>
    <item name="android:textSize">35dp</item>
    <item name="android:textColor">@color/primary_material_dark</item>
    <item name="android:textColorHint">@color/primary_material_dark</item>
  </style>

  <style name="ButtonStyle" parent="Widget.AppCompat.Button">
    <item name="android:layout_marginHorizontal">125dp</item>
    <item name="android:layout_marginVertical">12dp</item>
    <item name="android:textAlignment">center</item>
    <item name="android:textSize">20dp</item>
  </style>
</resources>
