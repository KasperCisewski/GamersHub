<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:id="@+id/games_frame"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/app_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="top">
        <TextView
            android:id="@+id/app_info_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="55dp"
            android:layout_marginTop="12dp"
            android:textAlignment="center"
            android:text="@string/app_name"/>
    </LinearLayout>
    <ScrollView
        android:id="@+id/games_scroll_view_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_below="@id/app_name_layout"
        android:layout_above="@id/shared_menu_toolbar"
        android:gravity="top">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/games_chosen_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/gameschosenforyou"
                    local:MvxBind="Click ClickGamesChosenForUser"/>
            </LinearLayout>
            <MvvmCross.Platforms.Android.Binding.Views.MvxGridView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:numColumns="2"
                android:layout_below="@id/games_chosen_layout"
                local:MvxItemTemplate="@layout/fragment_games_category_row_view"
                local:MvxBind="ItemsSource CategoryList; ItemClick ClickCategory" />
        </LinearLayout>
    </ScrollView>
    <include
        android:id="@+id/shared_menu_toolbar"
        layout="@layout/fragment_shared_menu"/>
</RelativeLayout>
