<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <TextView
      android:id="@+id/wishlist_text_view"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/profile_vault"/>
  <MvvmCross.Droid.Support.V7.RecyclerView.MvxRecyclerView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:id="@+id/games_vault_recycler_view"
    android:layout_above="@id/shared_menu_toolbar"
    android:scrollbars="vertical"
    local:MvxItemTemplate="@layout/fragment_game_row_view"
    local:MvxBind="ItemsSource GamesList; ItemClick ClickGame" />
  <include
    android:id="@+id/shared_menu_toolbar"
    layout="@layout/fragment_shared_menu"
  />
</RelativeLayout>
