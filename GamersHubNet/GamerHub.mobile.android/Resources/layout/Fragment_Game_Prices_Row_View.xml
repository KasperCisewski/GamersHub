<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        local:MvxBind="Bitmap GameCoverImage"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/game_prices_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            local:MvxBind="Text Title"/>
        <TextView
            android:id="@+id/game_prices_description_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            local:MvxBind="Text Description"/>
        <TextView
            android:id="@+id/game_prices_price_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_red_dark"
            local:MvxBind="Text Price"/>
        <TextView
            android:id="@+id/game_prices_shop_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            local:MvxBind="Text ShopName"/>
    </LinearLayout>
</LinearLayout>
