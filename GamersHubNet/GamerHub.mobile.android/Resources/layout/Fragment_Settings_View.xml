<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/settings_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:gravity="top">
        <TextView
            android:id="@+id/app_info_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="55dp"
            android:layout_marginTop="12dp"
            android:textAlignment="center"
            android:text="@string/app_name"/>
    </LinearLayout>
  <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/settings_layout">
      <Button
        android:id="@+id/logout_button_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ButtonStyle"
        android:background="@drawable/button_boarder"
        android:text="logout"
        local:MvxBind="Click LogoutCommand"/>
    </LinearLayout>
  <include
    android:id="@+id/shared_menu_toolbar"
    layout="@layout/fragment_shared_menu"/>
</RelativeLayout>
