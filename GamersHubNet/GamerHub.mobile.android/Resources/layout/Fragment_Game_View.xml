
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                local:MvxBind="Bitmap GeneralImage"/>
            <include
                android:id="@+id/shared_back_button"
                layout="@layout/shared_back_button"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/game_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:layout_margin="4dp"
            android:textAlignment="center"
            local:MvxBind="Text Title"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/game_category_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingRight="10dp"
                android:textSize="16dp"
                android:textColor="#FF0000"
                local:MvxBind="Text GameCategoryText"/>
            <TextView
                android:id="@+id/release_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingLeft="10dp"
                android:textSize="16dp"
                android:textColor="#FF0000"
                local:MvxBind="Text ReleaseDate"/>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginVertical="4dp"
            android:layout_marginHorizontal="30dp">
            <TextView
                android:id="@+id/description_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="23dp"
                local:MvxBind="Text Description"/>
        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="4dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/button_add_game_to_wish_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add to &#10;wishlist"
                android:background="#000000"
                android:layout_margin="4dp"
                android:textSize="20dp"
                local:MvxBind="Click AddGameToWishListCommand; Visible UserHasGameOnWishList, Converter=InvertBool"/>
            <Button
                android:id="@+id/delete_game_from_wish_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete from &#10;wishlist"
                android:background="#000000"
                android:layout_margin="4dp"
                android:textSize="20dp"
                local:MvxBind="Click DeleteGameFromWishListCommand; Visible UserHasGameOnWishList"/>
            <Button
                android:id="@+id/delete_game_from_vault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete from &#10;vault"
                android:background="#FF0000"
                android:layout_margin="4dp"
                android:textSize="20dp"
                local:MvxBind="Click DeleteGameFromVaultCommand; Visible UserHasGameInVault"/>
            <Button
                android:id="@+id/button_add_game_to_vault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add to &#10;vault"
                android:background="#FF0000"
                android:layout_margin="4dp"
                android:textSize="20dp"
                local:MvxBind="Click AddGameToVaultCommand; Visible UserHasGameInVault, Converter=InvertBool"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:orientation="horizontal"
            android:background="@drawable/custom_border"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="3dp"
            android:gravity="center">
            <TextView
                android:id="@+id/button_show_screenshots_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_gravity="left"
                android:textAlignment="gravity"
                android:text="Screenshots"
                android:layout_marginRight="25dp"
                android:clickable="true"
                android:textSize="22dp"
                local:MvxBind="Click ShowGameScreenshotsCommand"/>
            <TextView
                android:id="@+id/button_show_video_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textAlignment="gravity"
                android:layout_gravity="right"
                android:clickable="true"
                android:layout_marginLeft="25dp"
                android:text="Video"
                android:textSize="22dp"
                local:MvxBind="Click ShowGameVideoCommand"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <MvvmCross.Droid.Support.V7.RecyclerView.MvxRecyclerView
                android:id="@+id/game_screenshot_recycler_view"
                android:scrollbars="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                local:MvxItemTemplate="@layout/fragment_game_screenshot_row_view"
                local:MvxBind="ItemsSource GameScreenshots; ItemClick GameScreenShotOpen;Visible ShouldShowGameScreenshots"/>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:gravity="center"
                android:layout_marginVertical="4dp"
                android:layout_marginHorizontal="30dp">
                <LinearLayout
                    android:id="@+id/web_view_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_margin="12dp"
                    local:MvxBind="Visible ShouldShowGameVideo">
                    <WebView
                        android:id="@+id/video_View"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_gravity="center"
                        android:fitsSystemWindows="true"
                        android:drawingCacheQuality="auto"
                        android:scrollbars="none" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>
    <include
        android:id="@+id/shared_menu_toolbar"
        layout="@layout/fragment_shared_menu"/>
</RelativeLayout>