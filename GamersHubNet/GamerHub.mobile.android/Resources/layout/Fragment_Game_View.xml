
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include
            android:id="@+id/shared_back_button"
            layout="@layout/shared_back_button"/>
        <ImageView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            local:MvxBind="Bitmap GeneralImage"/>
        <TextView
            android:id="@+id/game_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:layout_margin="4dp"
            android:textAlignment="center"
            local:MvxBind="Text Title"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/game_category_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingRight="10dp"
                android:textSize="16dp"
                android:textColor="#FF0000"
                local:MvxBind="Text GameCategoryText"/>
            <TextView
                android:id="@+id/release_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingLeft="10dp"
                android:textSize="16dp"
                android:textColor="#FF0000"
                local:MvxBind="Text ReleaseDate"/>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <TextView
                android:id="@+id/description_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="23dp"
                android:layout_margin="4dp"
                local:MvxBind="Text Description"/>
        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="4dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/button_add_game_to_wish_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_game_to_wish_list"
                android:background="#000000"
                android:layout_margin="4dp"
                android:textSize="27dp"
                local:MvxBind="Click AddGameToWishListCommand; Visible UserHasGameOnWishList, Converter=InvertBool"/>
            <Button
              android:id="@+id/delete_game_from_wish_list"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Delete from wishlist"
              android:background="#000000"
              android:layout_margin="4dp"
              android:textSize="27dp"
              local:MvxBind="Click DeleteGameFromWishListCommand; Visible UserHasGameOnWishList"/>
            <Button
              android:id="@+id/delete_game_from_vault"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Delete from vault"
              android:background="#FF0000"
              android:layout_margin="4dp"
              android:textSize="27dp"
              local:MvxBind="Click DeleteGameFromVaultCommand; Visible UserHasGameInVault"/>
            <Button
                android:id="@+id/button_add_game_to_vault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_game_to_vault"
                android:background="#FF0000"
                android:layout_margin="4dp"
                android:textSize="27dp"
                local:MvxBind="Click AddGameToVaultCommand; Visible UserHasGameInVault, Converter=InvertBool"/>
        </LinearLayout>
        <android.support.v4.view.ViewPager
            android:id="@+id/game_view_main_with_view_pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            local:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:fillViewport="true"
            android:gravity="top">
            <android.support.v4.view.PagerTabStrip
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark" />
        </android.support.v4.view.ViewPager>
    </LinearLayout>
    <include
        android:id="@+id/shared_menu_toolbar"
        layout="@layout/fragment_shared_menu"
  />
</RelativeLayout>