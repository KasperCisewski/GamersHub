<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frame_home"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:id="@+id/home_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:gravity="top">
        <TextView
            android:id="@+id/app_info_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="55dp"
            android:layout_marginTop="12dp"
            android:textAlignment="center"
            android:text="@string/app_name"/>
    </LinearLayout>
    <ScrollView
        android:id="@+id/home_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_linear_layout"
        android:layout_above="@+id/shared_menu_toolbar">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/home_coming_soon_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textSize="25dp"
                android:text="COMING SOON"/>
            <MvvmCross.Droid.Support.V7.RecyclerView.MvxRecyclerView
                android:id="@+id/coming_soon_games_recycler_view"
                android:scrollbars="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                local:MvxItemTemplate="@layout/fragment_game_row_view"
                local:MvxBind="ItemsSource ComingSoonGames; ItemClick ClickGame" />
            <TextView
                android:id="@+id/home_brand_new_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textSize="25dp"
                android:text="BRAND NEW"/>
            <MvvmCross.Droid.Support.V7.RecyclerView.MvxRecyclerView
                android:id="@+id/brand_new_games_recycler_view"
                android:scrollbars="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                local:MvxItemTemplate="@layout/fragment_game_row_view"
                local:MvxBind="ItemsSource BrandNewGames; ItemClick ClickGame" />
            <TextView
                android:id="@+id/home_hottest_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textSize="25dp"
                android:text="HOTTEST"/>
            <MvvmCross.Droid.Support.V7.RecyclerView.MvxRecyclerView
                android:id="@+id/hottest_games_recycler_view"
                android:scrollbars="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                local:MvxItemTemplate="@layout/fragment_game_row_view"
                local:MvxBind="ItemsSource HottestGames; ItemClick ClickGame" />
            <TextView
                android:id="@+id/home_on_sale_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textSize="25dp"
                android:text="ON SALE"/>
            <MvvmCross.Droid.Support.V7.RecyclerView.MvxRecyclerView
                android:id="@+id/on_sale_games_games_recycler_view"
                android:scrollbars="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                local:MvxItemTemplate="@layout/fragment_game_row_view"
                local:MvxBind="ItemsSource OnSaleGames; ItemClick ClickGame" />
        </LinearLayout>
    </ScrollView>
    <include
      class="GamerHub.mobile.android.Views.Fragments.FragmentSharedMenu"
      layout="@layout/fragment_shared_menu"
        android:id="@+id/shared_menu_toolbar"/>
</RelativeLayout>